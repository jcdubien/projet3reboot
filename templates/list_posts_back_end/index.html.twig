{% extends 'base.html.twig' %}

{% block title %}Articles à modérer !{% endblock %}

{% block body %}

    <section class="article">


        {% for article in articles %}

            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{article.createdAt | date ('d/m/Y') }} à {{article.createdAt |  date ('H/i') }} dans la catégorie Politique</div>
                <div class="content">
                    <img {{ article.image }} alt="">
                    {{article.content | raw}}

                    <a href={{ path('deletearticle' , {'id' : article.id}) }} class="btn btn-primary">Supprimer</a>
                    <a href={{ path('updatearticle' , {'id' : article.id}) }} class="btn btn-primary">Supprimer</a>
                    
                </div>
            </article>

        {% endfor %}


    </section>
{% endblock %}
